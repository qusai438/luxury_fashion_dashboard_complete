# Flask Settings
FLASK_ENV=development
APP_SECRET_KEY=your_secret_key_here

# OpenAI
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_MODEL=gpt-4
# Leave OPENAI_API_KEY empty if you're using dynamic key management from dashboard
OPENAI_API_KEY=

# Shopify API
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_STORE_DOMAIN=

# SMTP Settings (used to send customer emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_NAME=Luxury Fashion Store

# Redis + Celery (optional, for background tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Admin Credentials (optional if using hardcoded login for testing)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Meta / Facebook Ads
META_ADS_ACCESS_TOKEN=
META_ADS_ACCOUNT_ID=
META_ADS_PIXEL_ID=

# TikTok API
TIKTOK_API_KEY=
TIKTOK_SECRET=

# AWS or Cloudinary (optional for media uploads)
CLOUD_STORAGE_PROVIDER=
CLOUD_API_KEY=
CLOUD_API_SECRET=

# Logging / Error Monitoring (optional)
SENTRY_DSN=

# Optional: Proxy or Rate Limiting
USE_PROXY=false
PROXY_LIST=
