# == Security ==
SECRET_KEY=dev-secret-key
APP_SECRET_KEY=your-fernet-secret-key-here  # استخدم مفتاح Fernet لتشفير مفاتيح API

# == Shopify ==
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_PASSWORD=your-shopify-password
SHOPIFY_STORE_NAME=your-shop-name.myshopify.com
SHOPIFY_LOCATION_ID=your-shopify-location-id

# == OpenAI ==
OPENAI_API_KEY=your-openai-api-key

# == Email (SMTP) ==
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# == Celery / Redis ==
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# == Uploads ==
LOW_STOCK_THRESHOLD=5

# == Optional Integrations ==
TIKTOK_ACCESS_TOKEN=your-tiktok-token
META_ACCESS_TOKEN=your-meta-token
GOOGLE_ADS_API_KEY=your-google-ads-key
HOTJAR_SITE_ID=your-hotjar-site-id
SENTRY_DSN=your-sentry-dsn-url

# == Flask Environment ==
FLASK_ENV=development
