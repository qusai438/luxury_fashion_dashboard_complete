# === Flask Core ===
FLASK_ENV=development
SECRET_KEY=your_flask_secret_here
APP_SECRET_KEY=put_your_fernet_key_here  # ⚠️ MUST be a valid Fernet key

# === OpenAI ===
OPENAI_ORG_ID=optional_org_id
# OPENAI_API_KEY=🛑 لا تضع المفتاح هنا، سيتم إدخاله من لوحة التحكم

# === Shopify ===
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
# SHOPIFY_API_KEY=🛑 لا تضع المفتاح هنا، سيتم إدخاله من لوحة التحكم

# === Meta Ads ===
# META_ADS_TOKEN=🛑 سيتم إدخاله من لوحة التحكم

# === Email / SMTP ===
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=🛑 سيتم إدخاله من لوحة التحكم

# === Database (SQLite default) ===
DATABASE_URL=sqlite:///data.db

# === Celery / Redis ===
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === Other ===
DALL_E_SIZE=1024x1024
SIMULATION_MODE=true
